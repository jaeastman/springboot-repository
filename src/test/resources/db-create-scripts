DROP DATABASE IF EXISTS jpaexample;
DROP USER IF EXISTS `jpa`@`%`;
CREATE DATABASE IF NOT EXISTS jpaexample CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
CREATE USER IF NOT EXISTS `jpa`@`%` IDENTIFIED WITH mysql_native_password BY 'jpa';
GRANT SELECT, INSERT, UPDATE, DELETE, CREATE, DROP, REFERENCES, INDEX, ALTER, EXECUTE, CREATE VIEW, SHOW VIEW,
    CREATE ROUTINE, ALTER ROUTINE, EVENT, TRIGGER ON `jpaexample`.* TO `jpa`@`%`;
FLUSH PRIVILEGES;